    "image": "ghcr.io/serene4mr/mowbot:main-dev-cuda-latest",
    "runArgs": [
        "--name", "mowbot_dev_cuda",
        "--net", "host",
        "--ipc", "host",
        "--pid", "host",
        "--privileged",
        "--gpus", "all",
        "-v", "/dev:/dev",
        "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
        "-e", "DISPLAY",
        "-e", "NVIDIA_VISIBLE_DEVICES=all",
        "-e", "NVIDIA_DRIVER_CAPABILITIES=all"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-vscode.cpptools-extension-pack",
                "ms-vscode.cmake-tools"
            ]
        }
    }
  }
