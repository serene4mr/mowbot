# ROS 2 Configuration
rosdistro=humble
rmw_implementation=rmw_cyclonedds_cpp

# Docker Base Images
base_image=ros:humble-ros-base-jammy
mowbot_base_image=ghcr.io/serene4mr/mowbot:base
mowbot_base_cuda_image=ghcr.io/serene4mr/mowbot:base-cuda

# NVIDIA CUDA Configuration
cuda_version=12.4
cuda_install_drivers=true

# cuDNN Configuration
cudnn_version=8.9.7.29-1+cuda12.2

# TensorRT Configuration
tensorrt_version=10.8.0.43-1+cuda12.8
tensorrt_cuda_version=12.8

# Development Tools Configuration
install_devel=true
install_ros_tools=true
install_system_tools=true
install_python_tools=true
install_code_quality_tools=true

# Build Tools Configuration
ccache_dir=/var/tmp/ccache
ccache_max_size=5G

# GeographicLib Configuration
geographiclib_package=libgeographic-dev
geographiclib_version=latest